<?xml version="1.0" encoding="UTF-8"?>
<service
	name="jmsWrapper"
	dbAccessType="readWrite"
	jmsUsage="notManaged"
	xmlns="http://www.simplity.org/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<actions>
		<setValue fieldName="hello" fieldValue="hellofromJMSWrapper"></setValue>
		<batchProcessor
			dbAccessType="none"
			jmsUsage="notManaged">
			<batchRowProcessor>
				<inputQueue
					queueName="dynamicQueues/Queue01"
					recordName="todos"/>
				<actionAfterChildren>				
					<block>
						<actions>
							<log names="action"/>
							<save saveAction="add" recordName="todosDBTable" executeOnCondition="action == 'post'"></save>
							<save saveAction="modify" recordName="todosDBTable" executeOnCondition="action == 'put'"></save>
							<save saveAction="delete" recordName="todosDBTable" executeOnCondition="action == 'delete'"></save>
						</actions>
					</block>
				</actionAfterChildren>
			</batchRowProcessor>
		</batchProcessor>
	</actions>
</service>