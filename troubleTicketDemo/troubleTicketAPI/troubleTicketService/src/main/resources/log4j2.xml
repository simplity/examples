<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace">
    <Properties>
       <Property name="application">troubleTicketService</Property>
    </Properties>
    <Appenders>
        <File name="file" fileName="logs/troubleTicketService.log">
            <PatternLayout
                pattern="${application} [%-5level] %X{correlationId} %d{yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </File>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="[%-5level] %X{correlationId} %d{yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
        <Async name="Async">
            <AppenderRef ref="file"/>
        </Async>
    </Appenders>
    <Loggers>
    	<logger name="org.apache.activemq" level="error" additivity="true">
		    <AppenderRef ref="Console" />
		    <AppenderRef ref="Async"/>
		 </logger>
        <Root level="trace" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="Async" />
        </Root>
    </Loggers>
</Configuration>
